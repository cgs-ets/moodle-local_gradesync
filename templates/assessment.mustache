{{!
    @template local_gradesync/assessment

    Gradesync assessment partial.
}}

<div class="assessment" data-id="{{id}}" data-class="{{class}}" data-groupid="{{groupid}}" data-mappedto="{{mappedto}}" data-markoutof="{{markoutof}}">
    <div class="info">
        <span>{{description1}}</span>
        <span>{{description2}}</span>
        <span>{{description3}}</span>
        <span class="markoutof">{{markoutof}}</span>
    </div>
    <div class="selection">
        <select class="gradeitems">
            <option value="-1"></option>
            {{#gradeitems}}
                <option value="{{id}}" data-markoutof="{{markoutof}}">{{itemname}}</option>
            {{/gradeitems}}
        </select>
    </div>
    <div class="alerts"></div>
</div>
