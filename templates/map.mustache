{{!
    @template local_gradesync/map

    Gradesync Map template.
}}

<div id="local_gradesync-map-root" class="loading">
    <div class="classes">
        {{#is_multiple_classes}}
            <h5>{{#str}} map:assessmentclasses, local_gradesync, {{config.extsystem}} {{/str}}</h5>
            <select id="assessment-class">
                {{#classes}}
                    <option value="{{.}}">{{.}}</option>
                {{/classes}}
            </select>
        {{/is_multiple_classes}}
        {{^is_multiple_classes}}
            <input type="hidden" value="{{#classes}}{{.}}{{/classes}}" />
        {{/is_multiple_classes}}
    </div>
    <div class="mappings">
        <div class="mapping-title">
            <h5>{{#str}} map:mappingtitle, local_gradesync {{/str}}</h5>
            <div class="spinner"><div class="circle spin"></div></div>
        </div>
        <div class="assessments">
            {{#assessments}}
                <div class="assessment" data-id="{{id}}" data-class="{{class}}">
                    <div class="info">
                        <span>{{description1}}</span>
                        <span>{{description2}}</span>
                        <span>{{description3}}</span>
                    </div>
                    <div class="selection">
                        <select class="gradeitems">
                            <option value=""></option>
                            {{#gradeitems}}
                                <option value="{{id}}">{{itemname}}</option>
                            {{/gradeitems}}
                        </select>
                    </div>
                </div>
            {{/assessments}}
        </div>
    </div>
</div>